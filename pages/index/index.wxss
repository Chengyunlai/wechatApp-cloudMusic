.indexContainer{

}

/*轮播图区域*/
.banners{
    width: 100%;
    height: 300rpx;
}

.banners image{
    width: 100%;
    height: 100%;
}

/*五个图标导航区域*/
.navContainer{
    display: flex;
    flex-direction: row;
}

.navItem{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}

.navItem text{
    font-size: 26rpx;
}

.navItem .iconfont{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    text-align: center ;
    line-height: 100rpx;
    background-color: burlywood;
    font-size: 50rpx;
    color: white;
    margin: 20rpx 0  ;
}

/*推荐歌曲*/

.recommendContainer{
    padding: 10rpx;
}

.recommendContainer .header .title{
    font-size: 26rpx;
    /*font-weight: bold;*/
    line-height: 80rpx;
    color: #666;
}

.recommendContainer .more{
    float: right;
    border-radius: 30rpx;
    border: 1px solid #333;
    font-size: 24rpx;
    padding: 10rpx 20rpx;

}

/*内容区*/
.scrollItem{
    width: 200rpx;
    margin: 10rpx;
}

.scrollItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.recommendScroll{
    margin-top: 10rpx;
    display: flex;
}

.scrollItem text{
    display: block;
    font-size: 26rpx ;

/* 单行文本溢出隐藏，省略号代替 */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

